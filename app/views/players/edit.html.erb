<form action="/players/<%= @player.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Edit player</p>
  <input type='text' name='player[position]' value="<%= @player.position %>"><br/>
  <textarea name='player[weight]'><%= @player.weight %></textarea><br/>
  <textarea type='text' name='player[injured]'><%= @player.injured %></textarea><br/>
  <input type='submit'/>
</form>
